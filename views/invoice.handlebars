

<h2>Generate invoice</h2>
        <div class="card-body">
<select class="selectedEmployer">
  {{#each employer}}
       <option value={{this.id}}>{{this.employerName}}, {{this.employerEmail}}</option>
  {{/each}}
</select>
          <!-- Sign-up Form (note the various input "types")-->
          <form role="form">
            <div class="form-group row">
              <label for="invoice-input">Invoice Amount: </label>
              <input class="form-control" id="invoice-input" type="text">
            </div>

            <div class="form-group row">
              <label for="employee-input">Employer ID: </label>
              <input class="form-control" id="employer-id-input" type="text">
            </div>

            
            <button class="btn btn-default" id="add-invoice" type="button">Submit</button>
          </form>

        </div>

        <div id="wrapper">

      <div id="display">00:00</div>

      <!-- Div containing our stopwatch controls -->
      <div id="buttons">
        <button id="start">Start</button>
        <button id="pause">Pause</button>
        <button id="stop">Stop</button>
        <button id="reset">Reset</button>

      </div>

      <div id="timeMessage"></div>

    </div>


            <!-- Script -->
            <script src="/js/stopwatch.js"><{{!}}</script>

