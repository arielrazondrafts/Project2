<link rel="stylesheet" href="HTML-CSS/layout/styles/style.css" media="screen" title="no title" charset="utf-8">
<link href="HTML-CSS/layout/styles/emailStyles.css" rel="stylesheet" type="text/css" media="all">



<div class="bgded overlay" style="background-image: url('HTML-CSS/images/backgrounds/01.png')">
    <!-- ################################################################################################ -->
    <div class="wrapper row1">
    
        <div class="wrapper60">
            <form role="form">
                <div class="form-group">
                    <label for="service-input">Email Service</label>
                    <input class="form-control" id="service-input" type="text" placeholder="gmail">
                </div>
                <div class="form-group">
                    <label for="user-input">Email:</label>
                    <input class="form-control" id="email-input" type="email" placeholder="email@gmail.com">
                </div>
                <div class="form-group">
                    <label for="password-input">Password</label>
                    <input class="form-control" id="password-input" type="password" placeholder="password">
                </div>
                <p>Select who you would like to email</p>
                <select class="selectedEmployer" placeholder="Select Employer">
                    <option disabled selected value> -- select an option -- </option>
                    {{#each employer}}
                    <option value={{this.employerEmail}}>{{this.employerName}}, {{this.employerEmail}}</option>
                    {{/each}}
                </select>
                <div class="form-group">
                    <label for="email-input">Send To: </label>
                    <input class="form-control" id="email-to-input" type="text">
                </div>
                <p>Pick an email template or write your own</p>
                <button id="initial-message">Initial Bill</button>
                <button id="reminder-message">Remind</button>
                <div class="form-group">
                    <label for="subject-input">Subject</label>
                    <input class="form-control" id="subject-input" type="text">
                </div>
                <div class="form-group">
                    <label for="message-input">Message</label>
                    <textarea class="form-control" id="message-input" type="text"></textarea>
                </div>
                <div class="form-group">
                    <label for="path-input">Attachment File Path</label>
                    <input class="form-control" id="path-input" type="text"
                        placeholder="/Users/macuser/Downloads/invoice.pdf">
                </div>
            </form>
    
            <button id="email">Send Email</button>
        </div>




    </div>
</div>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/invoices.js"></script>
<script src="/js/email.js"></script>


